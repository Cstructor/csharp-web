@model HelloWorld.Models.Product[]

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/_MainLayout.cshtml";
}

@if (Model.Length > 0)
{
    <table>
        @foreach (var product in Model)
        {
            var name = product.Name;
            var price = product.Price.ToString("C");
            string stock = product.ProductCount.ToString();

            switch (product.ProductCount)
            {
                case 0:
                    {
                        stock = "Out of Stock";
                        break;
                    }
                case 1:
                    {
                        stock = "Low Stock";
                        break;
                    }
            }

            <tr>
                <td>@name</td>

                <td>@price</td>

                <td>@stock</td>
            </tr>
        }
    </table>
}
else
{
    <h2>No product data found.</h2>
}